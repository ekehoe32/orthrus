name: Generic Orthrus Workflows

conda_env: ../environment.yml

entry_points:
  tune:
    parameters:
      dataset-path:
        type: path
      sample-query:
        type: string
        default: ""
      pipeline-path:
        type: path
      num-samples:
        type: float
        default: 100
      experiment-name:
        type: string
        default: "tune_test"
    command: "python ./workflows/tune.py \
      --dataset-path {dataset-path} --pipeline-path {pipeline-path} \
      --sample-query {sample-query} --experiment-name {experiment-name} \
      --num-samples {num-samples}"     

  classify:
    parameters:
      dataset_path:
        type: path
      sample_query:
        type: string
      pipeline_path:
        type: path
    command: "python ./workflows/classify.py \
      --dataset-path {dataset_path} --pipeline-path {pipeline_path} \
      --sample-query {sample_query}"
  

